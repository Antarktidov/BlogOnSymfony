{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
<div class="card p-3">
                <h1>{{ blog.title }}</h1>
                {% if blog.image %}
                <img src="{{ asset('uploads/' ~ blog.image) }}" alt="{{ blog.title }}" style="max-width: 300px; max-height: 300px;">
                {% endif %}
                <small>Author: {{ blog.user.email }}</small>
                <p>{{ blog.text }}</p>
                <br>
                <span>
                    <a href="{{ path('app_blog_index') }}">back to list</a>
                    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}">edit</a>
                </span>
                {{ include('blog/_delete_form.html.twig') }}
</div>
{% endblock %}
